{
  "name": "content-automation",
  "version": "1.0.0",
  "description": "Unified content and marketing automation platform",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node hub/index.mjs",
    "dashboard": "node hub/dashboard/index.mjs",
    "run-task": "node hub/cli.mjs run",
    "list-tasks": "node hub/cli.mjs list",
    "status": "node hub/cli.mjs status",
    "install-scheduler": "./scripts/install-macos.sh",
    "add-task": "node hub/cli.mjs add-task",
    "setup-blog-automation": "node tasks/daily-blog/setup.mjs",
    "check-blog-session": "node tasks/daily-blog/check-session.mjs",
    "generate-blog": "node tasks/daily-blog/generate-blog.mjs",
    "generate-blog:aigne": "node tasks/daily-blog/generate-blog.mjs AIGNE",
    "generate-blog:myvibe": "node tasks/daily-blog/generate-blog.mjs MyVibe",
    "generate-blog:arcblock": "node tasks/daily-blog/generate-blog.mjs ArcBlock",
    "generate-blog:arcsphere": "node tasks/daily-blog/generate-blog.mjs ArcSphere",
    "reviews": "node hub/review-cli.mjs",
    "reviews:list": "node hub/review-cli.mjs list",
    "reviews:view": "node hub/review-cli.mjs view",
    "reviews:approve": "node hub/review-cli.mjs approve",
    "reviews:reject": "node hub/review-cli.mjs reject",
    "schedule": "node hub/schedule-cli.mjs",
    "uninstall-scheduler": "launchctl unload ~/Library/LaunchAgents/com.robroyhobbs.content-automation.plist && rm ~/Library/LaunchAgents/com.robroyhobbs.content-automation.plist",
    "web": "node hub/web-dashboard/index.mjs",
    "web:dev": "node --watch hub/web-dashboard/index.mjs",
    "overseer": "node hub/overseer.mjs",
    "overseer:dev": "node --watch hub/overseer.mjs",
    "publish:arcsphere": "node tasks/arcsphere-social-weekly/runner.mjs publish",
    "drafts:view": "cat campaigns/arcsphere-releases/drafts/v1.10/*.md"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^5.3.0",
    "croner": "^8.0.0",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.1",
    "marked": "^4.3.0",
    "nodemailer": "^7.0.13",
    "playwright": "^1.58.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yaml": "^2.3.4"
  }
}
